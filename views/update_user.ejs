        <!-- add user form -->
         <!-- form handling -->
 <form method="POST" id="update_user">
    <div class="row">
        <div class="col-lg-6 mx-auto">
            <div class="card ">
                <div class="card-header">
                    <div class="bg-white shadow-sm pt-4 pl-2 pr-2 pb-2">
                        <div class="new_user">
                            <div class="form-group">
                                <label for="name" class="form-label mt-4">Nombre</label>
                                <input type="hidden" name="id" value="<%= user._id %>">
                                <input class="form-control" type="text" name="name" value="<%= user.name %>" placeholder="Giovanni">
                            </div>
                            <div class="form-group">
                                <label class="form-label mt-4" for="Email" >Email</label>
                                <input class="form-control" type="text" name="email" value="<%= user.email%>" placeholder="ejemploe@gmail.com">
                            </div>
                            <div class="form-group">
                                <label for="gender" class="form-label mt-4">GÃ©nero</label>
                                <div class="radio inline">
                                    <input type="radio" id="radio-2" name="gender" value="Masculino" <%= user.gender == 'Masculino' ? 'checked' : '' %>>
                                    <label for="radio-2" class="radio-label">Masculino</label>
                                </div>
                                <div class="radio inline">
                                    <input type="radio" id="radio-3" name="gender" value="Femenino"  <%= user.gender == 'Femenino' ? 'checked' : '' %> >
                                    <label for="radio-3" class="radio-label">Femenino</label>
                                </div>
                            </div>
                    
                            <div class="form-group">
                                <label for="gender" class="form-label mt-4">Estado</label>
                                <div class="radio inline">
                                    <input type="radio" id="radio-4" name="status" value="Activo" <%= user.status == 'Activo' ? 'checked' : '' %> >
                                    <label for="radio-4" class="radio-label">Activo</label>
                                </div>
                                <div class="radio inline">
                                    <input type="radio" id="radio-5" name="status" value="Inactivo" <%= user.status == 'Inactivo' ? 'checked' : '' %> >
                                    <label for="radio-5" class="radio-label">Inactivo</label>
                                </div>
                            </div>
                    
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary update">Actualizar</button>
                            </div>
                    
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
   
</form>
       
    </div>
